<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:Cobalt.WpfUi.Controls">
    
    <Style TargetType="{x:Type controls:OverlayPresenter}">
        <Setter Property="SnapsToDevicePixels" Value="True" /> 
        <Setter Property="Background" Value="{DynamicResource ContentDialogSmokeFill}" />
        <Setter Property="Focusable" Value="False" /> 
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:OverlayPresenter}">
                    <Grid Background="{TemplateBinding Background}"
                          Focusable="{TemplateBinding Focusable}">
        
                        <Border Background="{DynamicResource ContentDialogBackground}"
                                BorderBrush="{DynamicResource ContentDialogBorderBrush}"
                                BorderThickness="1"
                                CornerRadius="{DynamicResource PopupCornerRadius}"
                                Margin="35"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                MinWidth="320">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="30"
                                                  Direction="0"
                                                  Opacity="0.4"
                                                  ShadowDepth="0"
                                                  Color="#202020" />
                            </Border.Effect>
            
                            <Border Background="{DynamicResource ContentDialogTopOverlay}"
                                    CornerRadius="8">
                                <Grid Margin="24">
                                    <ContentPresenter />
                                </Grid>
                            </Border>
                        </Border>
                    </Grid> 
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
</ResourceDictionary>