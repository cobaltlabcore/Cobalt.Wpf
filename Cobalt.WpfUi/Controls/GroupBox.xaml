<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
                    xmlns:controls="clr-namespace:Cobalt.WpfUi.Controls">
    
    <!-- Default header template -->
    <DataTemplate x:Key="GroupBoxDefaultHeaderTemplate">
        <ui:TextBlock FontTypography="Subtitle"
                      Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                      Text="{Binding}" />
    </DataTemplate>
    
    <Style TargetType="{x:Type controls:GroupBox}">
        <Setter Property="Focusable" Value="False" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:GroupBox}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        
                        <ContentPresenter x:Name="HeaderPresenter"
                                          Grid.Row="0"
                                          Margin="0,0,0,10"
                                          Content="{TemplateBinding Header}"
                                          ContentTemplate="{TemplateBinding HeaderTemplate}" />
                        
                        <Border Grid.Row="1"
                                Padding="16"
                                Background="{ui:ThemeResource CardBackgroundFillColorDefaultBrush}"
                                BorderBrush="{ui:ThemeResource CardStrokeColorDefaultBrush}"
                                BorderThickness="1"
                                CornerRadius="8">
                            <ContentPresenter />
                        </Border>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <!-- Set default header template when HeaderTemplate is null -->
                        <Trigger Property="HeaderTemplate" Value="{x:Null}">
                            <Setter TargetName="HeaderPresenter" Property="ContentTemplate"
                                    Value="{StaticResource GroupBoxDefaultHeaderTemplate}" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
</ResourceDictionary>